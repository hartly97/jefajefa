{
  "name": "app",
  "private": true,
  "devDependencies": {
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "postcss-import": "^16.1.1",
    "postcss-url": "^10.1.3"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16",
    "@popperjs/core": "^2.11.8",
    "@rails/actiontext": "^8.1.100",
    "autoprefixer": "^10.4.21",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.92.1",
    "trix": "^2.1.15"
  },
  "scripts": {
  "build": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
  "build:css:compile": "postcss ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css",
  "build:css": "npm run build:css:compile",
  "watch:css": "postcss ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css -w"
},

  "browserslist": [
    "defaults"
  ]
}
