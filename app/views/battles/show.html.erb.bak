<h1><%= @battle.name %></h1>

<%= render "shared/citations", citable: @battle, heading: "Battle Citations" %>

<h2>Involvements</h2>
<% if @involvements.present? %>
  <ul>
    <% @involvements.each do |inv| %>
      <li>
        <% p = inv.participant %>
        <% if p %>
          <%= link_to(p.respond_to?(:display_name) ? p.display_name : inv.participant_label, p) %>
        <% else %>
          (participant missing)
        <% end %>
        <%== " — <strong>#{ERB::Util.html_escape(inv.role)}</strong>" if inv.role.present? %>
        <%= " (#{inv.year})" if inv.year.present? %>
        <%= " — #{inv.note}"  if inv.note.present? %>
        <%= button_to "Remove", involvement_path(inv), method: :delete,
              form: { data: { turbo_confirm: "Remove involvement?" } },
              class: "btn btn-sm btn-outline-danger ms-2" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p><em>No involvements recorded.</em></p>
<% end %>

<h3>Add Soldier Involvement</h3>
<%= form_with url: involvements_path, method: :post do |f| %>
  <%= hidden_field_tag "involvement[involvable_type]", "Battle" %>
  <%= hidden_field_tag "involvement[involvable_id]", @battle.id %>
  <%= hidden_field_tag "involvement[participant_type]", "Soldier" %>

  <div class="mb-2">
    <%= label_tag :soldier_search, "Find Soldier" %>
    <input type="text" id="soldier_search" placeholder="Type a name..." list="soldier_suggest" class="form-control">
    <datalist id="soldier_suggest"></datalist>
    <%= hidden_field_tag "involvement[participant_id]", "", id: "involvement_participant_id" %>
    <small>Pick a suggestion to set the hidden ID.</small>
  </div>

  <div class="row g-2">
    <div class="col-md-4">
      <%= label_tag :involvement_role, "Role" %>
      <%= text_field_tag "involvement[role]", nil, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= label_tag :involvement_year, "Year" %>
      <%= number_field_tag "involvement[year]", nil, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= label_tag :involvement_note, "Note" %>
      <%= text_field_tag "involvement[note]", nil, class: "form-control" %>
    </div>
  </div>

  <div class="mt-2">
    <%= f.submit "Add", class: "btn btn-primary" %>
  </div>
<% end %>

<script>
(function(){
  const input  = document.getElementById('soldier_search');
  const list   = document.getElementById('soldier_suggest');
  const hidden = document.getElementById('involvement_participant_id');
  if(!input) return;
  let t;
  input.addEventListener('input', function(){
    clearTimeout(t);
    const q = this.value.trim();
    if(q.length < 2) { list.innerHTML = ''; return; }
    t = setTimeout(() => {
      fetch('/soldiers/search.json?q=' + encodeURIComponent(q)) // ensure .json
        .then(r => r.json())
        .then(rows => {
          list.innerHTML = rows.map(r => `<option value="${r.label}"></option>`).join('');
        });
    }, 200);
  });
  input.addEventListener('change', function(){
    const m = this.value.match(/#(\d+)\)?\s*$/);
    if(m) hidden.value = m[1];
  });
})();
</script>

<p class="mt-3">
  <%= link_to "Edit", [:edit, @battle] %> |
  <%= link_to "Back", url_for(controller: controller_name, action: :index) %>
</p>
