<h1>
# <%#= link_to edit_Article? ? "New Article" : "Edit Article" %>
# </h1>
<%= link_to "Edit", [:edit, @article] %> |
  <%= link_to "Back", url_for(controller: controller_name, action: :index) %>
</h1>
<%= form_with model: @article, data: { turbo: false } do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <%# if defined?(current_user) && current_user&.admin? %>
    <div class="field">
      <%= f.label :category_ids, "Categories" %>
      <%= f.collection_select :category_ids, Category.order(:name), :id, :name, {}, multiple: true %>
    </div>
  <%# end %>

  <hr>
 

  <div class="actions mt-3">
    <%= f.submit %>
  </div>
<% end %>
