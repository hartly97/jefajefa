<div class="container-fluid">
  <div class="row pt-3">
   <div class="col-10">
     <% @books.in_groups_of(3).each do |book_array| %>
        <div class="row">
          <% book_array.each do |book| %>
         <%  unless book.nil? %>
         <div class="col">
           <div class="card redcard mb-3 rounded shadow">
             <div class="card-body">
               <h4 class="card-title"><%#= link_to book.name, book_path(book) %></h4>
               <h5 class="card-text"><%= link_to book.page_number, book_path(book) %></h5>
             <% if book.image.present? %>
             <%#= image_tag book.image.variant(resize_to_limit: [100, nil]) %>
             <% book.image %>
               <% end %>
             </div>
           </div>
        </div>
     <% end %>
     <% end %>
       </div>
       <% end %>
     </div>
  </div>
</div>
