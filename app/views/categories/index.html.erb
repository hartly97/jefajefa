<h1><%= controller_name.titleize %></h1>
<p><%= link_to "New Category", new_categories_path, class: "btn btn-primary" %></p>
<ul>
<% if @categories.any? %>
  <% categories.each do |category| %>
    <li><%= link_to(category.try(:title) || category.try(:name) || category.try(:slug), category) %></li>
  <% end %>
</ul>
<p><%= link_to "New", url_for([:new, controller_name.singularize]) %></p>
<% end %>