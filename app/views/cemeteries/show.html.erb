<h1><%= @cemetery.try(:title) || @cemetery.try(:name) || @cemetery.try(:slug) %></h1>

<h1><%#= @cemetery.name %></h1>

<h4>Soldiers buried here
  <small class="text-muted">(<%= @soldier_burials_count %>)</small>
</h4>
<%#= render "cemeteries/burials_table",
      cemetery: @cemetery,
      burials:  @soldier_burials,
      total_count: @soldier_burials_count %>

       <div class="col-md-6">
    <%= label_tag :q, "Search burials" %>
    <%= text_field_tag :q, params[:q], class: "form-control",
                       placeholder: "Search by name…" %>
  </div>
  <div class="col-md-2">
    <%= submit_tag "Search", class: "btn btn-primary w-100" %>
  </div>
  <% if params[:q].present? %>
    <div class="col-md-2">
      <%= link_to "Clear", cemetery_path(@cemetery), class: "btn btn-link w-100" %>
    </div>
  <% end %>

<h2 class="mt-4">Other burials
  <small class="text-muted">(<%= @burials_count %>)</small>
</h2>
<%= render "cemeteries/burials_table",
      cemetery: @cemetery,
      burials:  @burials,
      total_count: @burials_count %>

<%= render "shared/citations", citable: @cemetery, heading: "Cemetery Citations" %>

<h2>Involvements</h2>
<% if @involvements.present? %>
  <ul>
    <% @involvements.each do |inv| %>
      <li>
        <% p = inv.participant %>
        <% if p %>
          <%= link_to(p.respond_to?(:display_name) ? p.display_name : inv.participant_label, p) %>
        <% else %>
          (participant missing)
        <% end %>
        <%== " — <strong>#{ERB::Util.html_escape(inv.role)}</strong>" if inv.role.present? %>
        <%= " (#{inv.year})" if inv.year.present? %>
        <%= " — #{inv.note}"  if inv.note.present? %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p><em>No involvements recorded.</em></p>
<% end %>

<p class="mt-3">
  <%#= link_to "Edit", [:edit, @cemetery] %> <!--|-->
  <%#= link_to "Back", url_for(controller: controller_name, action: :index) %> <!--|-->
  <%#= link_to "Add burial", new_cemetery_burial_path(@cemetery),
              class: "btn btn-sm btn-outline-primary" %>
</p>



