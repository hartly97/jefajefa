<h1><%= link_to @newsletter.display_name, @newsletter %>
</h1> 
<h3><%= @newsletter.name %></h3>
<h3><%= @newsletter.volume %></h3>
<h3><%= @newsletter.number %></h3>
<h3><%= @newsletter.version %></h3>
<h3><%= @newsletter.day %></h3>
<h3><%= @newsletter.month %></h3>
<h3><%= @newsletter.year %></h3><h3><%= @newsletter.name %></h3>
<h3><%= @newsletter.content %></h3>
<div class="section article-headings">
  <div class="row">
    <div class="col">
      <h2 class="my-lg-4 pl-5 text-white text-center">Newsletters</h2>
    </div>
  </div>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="col">
      <div class="card pl-2 pt-2">
        <div class="h4 card-title"><%= @newsletter.title %>
          <p class="card-text"><%= @newsletter.version %></p>
          <p class="card-text"><%= @newsletter.day %></p>
          <p class="card-text"><%= @newsletter.month %></p>
          <p class="card-text"><%= @newsletter.year %></p>
          <p class="card-text"><%= @newsletter.volume %></p>
          <p class="card-text"><%#= @newsletter.image %></p>
          <% if @newsletter.content.present? && @newsletter.content.persisted? %>
          <%= @newsletter.content %>
          <% end %>
          <% if @newsletter.file_name.present? && @newsletter.content.persisted? %>
          <% @newsletter.file_name %>
          <% end %>
          <% if @newsletter.image.present? && @newsletter.content.persisted? %>
          <% @newsletter.image %>
          <% end %>

          <!-- <ul>
            <%# @newsletter.file_name.each do |file_name| %>
            <li>
              <%# if file.representable? %>
                <%#= image_tag file_name.representation(resize_to_limit: [100, 100]) %>
              <%# else %>
                <%#= link_to rails_blob_path(file, disposition: "attachment") do %>
                  <%#= image_tag "placeholder.png", alt: "Download file" %>
                <%# end %>
              <%# end %>
            </li>
            <%# end %>
          </ul> -->


        </div>
      </div>
    </div>
  </div>
</div>
<div class="container pt-2">
  <div>
    <% if user_signed_in? && (current_user.role == 'admin') %>
    <%= link_to "Delete", newsletter_path(@newsletter), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: 'Are you sure you want to delete this newsletter?'} %>
    <%= link_to "Edit", edit_newsletter_path(@newsletter), class: 'btn btn-sm btn-primary' %>
    <%= link_to "← Back", newsletters_path, class: 'btn btn-sm btn-primary' %>
    <% end %>
  </div>
</div>



<% if @newsletter.pdf.attached? %>
  <div class="ratio ratio-4x3 mb-2">
    <iframe
      src="<%= rails_blob_path(@newsletter.pdf, disposition: "inline") %>"
      title="Newsletter PDF"
      style="border:0;"
    ></iframe>
  </div>
  <p>
    <%= link_to "Download PDF", rails_blob_path(@newsletter.pdf, disposition: "attachment"),
                class: "btn btn-outline-secondary" %>
  </p>
<% end %>
